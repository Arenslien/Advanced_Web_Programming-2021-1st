doctype html
html 
    head 
        title setting_content
        link(type="text/css" rel="stylesheet" href="../css/basic.css")
        link(rel="icon" href="data:;base64,iVB0Rw0KGfo=")
        style.
            .user-icon {
                height: 100px;
                width: 100px;
                border-radius: 50%;
                display: inline-block;
                background: white url("../images/user-icon.png") center center/100px 100px no-repeat;
                margin: 20px 0px 20px 20px;
            }
            label {
                display: block;
                margin-top: 10px;
            }
            span.in-label {
                display: inline-block;
                width: 120px;
                height: 30px;
            }
            input[type=text],
            input[type=email],
            input[type=tel],
            input[type=url],
            input[type=submit],
            textarea, select {
                border: #77bb58 2px solid;
                border-radius: 5px;
                width: 210px;
                height: 30px;
                background: #b3ff9018;
            }
            input[type=text].name {
                width: 95px;
                margin-right: 6px;
            }
            textarea {
                height: auto;
            }
            input[type=submit] {
                width: 80px;
            }
    body 
        div 
            form 
                label 
                    span.user-icon
                    input(type="file")
                label 
                    span.in-label Full Name 
                    input(type="text" placeholder="First Name" class="name") 
                    input(type="text" placeholder="Last Name" class="name")
                label 
                    span.in-label E-mail 
                    input(type="email" placeholder="email@example.com")
                
                label 
                    span.in-label Phone Number 
                    input(type="tel" placeholder="010-XXXX-XXXX")
                
                label 
                    span.in-label Info 
                    textarea(rows="3" wrap="hard" placeholder="Introduction to myself")
                
                label 
                    span.in-label Git URL 
                    input(type="url" placeholder="https://github.com/username")
                
                label 
                    span.in-label Job 
                    select(name="Job")
                        option(value="1") 학생
                        option(value="2") 회사원
                        option(value="3") 공무원
                        option(value="4") 주부
                        option(value="5") 무직
                
                label
                    span.in-label Gender 
                    <input type="radio" name="gender"/> 남
                    <input type="radio" name="gender"/> 여
                
                label 
                    span.in-label Birth Day 
                    input(type="date")
                
                label 
                    input(type="submit")